<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Add a new note to your collection">
    <title>Note App - Add Note</title>
    <link rel="icon" type="image/png" href="/img/favicon.png">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="/js/theme.js"></script>
</head>

<body>
    <!-- Theme Toggle (Hidden Checkbox) -->
    <input type="checkbox" id="theme-toggle" class="theme-toggle-checkbox" checked>

    <!-- Navbar -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-left">
                <a href="/" class="logo">
                    <span class="logo-icon">
                        <svg class="logo-svg" width="28" height="28" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M15.5 3H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V8.5L15.5 3z"></path>
                            <path d="M15 3v6h6"></path>
                            <line x1="9" y1="13" x2="15" y2="13"></line>
                            <line x1="9" y1="17" x2="15" y2="17"></line>
                        </svg>
                    </span>
                    <span class="logo-text">NoteApp</span>
                </a>
                <div class="search-bar">
                    <span class="search-icon">üîç</span>
                    <input type="text" placeholder="Search notes..." class="search-input">
                </div>
            </div>

            <input type="checkbox" id="menu-toggle" class="menu-toggle-checkbox">
            <label for="menu-toggle" class="hamburger-btn">
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
            </label>

            <ul class="nav-links">
                <li><a href="/" class="nav-link">Home</a></li>
                <li><a href="/add-note" class="nav-link active">Add Note</a></li>
                <li><a href="/about" class="nav-link">About</a></li>
                <li><a href="/logout" class="nav-link logout">Logout</a></li>
            </ul>

            <label for="theme-toggle" class="theme-toggle-btn">
                <span class="theme-icon">‚òÄÔ∏è</span>
            </label>
        </div>
    </nav>

    <!-- Add Note Form Section -->
    <main class="main-content form-page">
        <div class="form-container">
            <div class="form-header">
                <h1 class="form-title">Create New Note</h1>
                <p class="form-subtitle">Capture your thoughts and ideas</p>
            </div>

            <form class="note-form" action="/add-note" method="post">
                <div class="form-group">
                    <label for="note-title" class="form-label">Note Title</label>
                    <input type="text" id="note-title" name="title" class="form-input"
                        placeholder="Enter a descriptive title for your note" required>
                </div>

                <div class="form-group">
                    <label for="note-description" class="form-label">Note Description</label>
                    <textarea id="note-description" name="description" class="form-textarea" rows="10"
                        placeholder="Write your note content here..." required></textarea>
                </div>

                <div class="form-actions">
                    <a href="/" class="btn-secondary">Cancel</a>
                    <button type="submit" class="btn-primary">Save Note</button>
                </div>
            </form>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2026 NoteApp. All rights reserved.</p>
        </div>
    </footer>
</body>

</html>