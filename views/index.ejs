<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Modern Note App - Organize your thoughts and ideas efficiently">
    <title>Note App - Home</title>
    <link rel="icon" type="image/png" href="/img/favicon.png">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="/js/theme.js"></script>
</head>

<body>
    <!-- Theme Toggle (Hidden Checkbox) -->
    <input type="checkbox" id="theme-toggle" class="theme-toggle-checkbox" checked>

    <!-- Navbar -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-left">
                <a href="/" class="logo">
                    <span class="logo-icon">
                        <svg class="logo-svg" width="28" height="28" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M15.5 3H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V8.5L15.5 3z"></path>
                            <path d="M15 3v6h6"></path>
                            <line x1="9" y1="13" x2="15" y2="13"></line>
                            <line x1="9" y1="17" x2="15" y2="17"></line>
                        </svg>
                    </span>
                    <span class="logo-text">NoteApp</span>
                </a>
                <form action="/" method="GET">
                        <div class="search-bar">

                        <span class="search-icon">üîç</span>
                        <input type="text" placeholder="Search notes..." class="search-input" name="q">
                    </div>
                    </form>
            </div>

            <input type="checkbox" id="menu-toggle" class="menu-toggle-checkbox">
            <label for="menu-toggle" class="hamburger-btn">
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
            </label>

            <ul class="nav-links">
                <li><a href="/" class="nav-link active">Home</a></li>
                <li><a href="/add-note" class="nav-link">Add Note</a></li>
                <li><a href="/about" class="nav-link">About</a></li>
                <li><a href="/logout" class="nav-link logout">Logout</a></li>
            </ul>

            <label for="theme-toggle" class="theme-toggle-btn">
                <span class="theme-icon">‚òÄÔ∏è</span>
            </label>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1 class="hero-title">Welcome, <%= name %></h1>
            <p class="hero-subtitle">Organize your thoughts, ideas, and tasks in one beautiful place</p>
        </div>
    </section>

    <!-- Notes Section -->
    <main class="main-content">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Your Notes</h2>
                <a href="/add-note" class="btn-primary">+ New Note</a>
            </div>

            <div class="notes-grid">
                <!-- Note Card 1 -->
              <% if (notes.length === 0) { %>
    <p>No notes found</p>
<% } else { %>
    <% notes.forEach(note => { %>
        <div class="note-card">
            <div class="note-content">
                <h3 class="note-title"><%= note.title %></h3>
                <p class="note-description"><%= note.description %></p>
                <div class="note-meta">
                    <span class="note-date"><%= note.createdAt.toDateString() %></span>
                </div>
            </div>
            <div class="note-actions">
             <!-- Edit Note Link -->
<a href="/edit-note/<%= note._id %>" class="action-btn edit-btn" title="Edit Note">
    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
    </svg>
</a>

<!-- Delete Note Link -->
<a href="/delete-note/<%= note._id %>" class="action-btn delete-btn" title="Delete Note" onclick="return confirm('Are you sure you want to delete this note?');">
    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="3 6 5 6 21 6"></polyline>
        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
    </svg>
</a>

            </div>
        </div>
    <% }) %>
<% } %>



            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2026 NoteApp. All rights reserved.</p>
        </div>
    </footer>
</body>

</html>